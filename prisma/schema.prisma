generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Runner {
  id              Int         @id @default(autoincrement())
  password        String
  login           String      @unique @db.VarChar(256)
  firstname        String      @db.VarChar(256)
  lastname        String      @db.VarChar(256)
  birthdate       DateTime
  races           RunnerToRace[]
  logs_runner     Log_Runner[]
  logs_beacon     Log_Beacon[]

  @@map("runners")
}

model Race {
  id              Int         @id @default(autoincrement())
  name            String
  dateTime        DateTime
  status          String
  beacons         Beacon[] 
  participants    RunnerToRace[]
  logs_runner     Log_Runner[]
  logs_beacon     Log_Beacon[]

  @@map("races")
}

model RunnerToRace{
  runnerId        Int
  raceId          Int
  bibNumber       Int
  totalTime       Float?
  runner          Runner @relation(fields: [runnerId], references: [id])
  Race            Race  @relation(fields: [raceId], references: [id])

  @@id([runnerId, raceId])
  @@map("runner_race")
}

model Beacon {
  id              Int         @id @default(autoincrement())
  id_race         Int     
  name            String      @db.VarChar(256)    
  race            Race        @relation(fields: [id_race], references: [id], onDelete: Cascade)
  pos_GPS         Float[]
  logs_beacon     Log_Beacon[]

  @@map("beacons")
}

model Log_Runner {
  id              Int         @id @default(autoincrement())
  datetime        DateTime
  type            String     @db.VarChar(256)
  id_race         Int
  id_runner       Int
  longitude       Float
  latitude        Float
  altitude        Float
  message         String?     @db.VarChar(256)
  runner          Runner @relation(fields: [id_runner], references: [id])
  Race            Race  @relation(fields: [id_race], references: [id])

  @@map("logs_runner")
}

model Log_Beacon {
  id              Int         @id @default(autoincrement())
  datetime        DateTime
  type            String     @db.VarChar(256)
  id_race         Int
  id_runner       Int
  id_beacon       Int?
  runner_longitude       Float
  runner_latitude        Float
  runner_altitude        Float
  message         String?     @db.VarChar(256)

  runner          Runner @relation(fields: [id_runner], references: [id])
  Race            Race  @relation(fields: [id_race], references: [id])
  beacon          Beacon? @relation(fields: [id_beacon], references: [id])
  

  @@map("logs_beacon")
}