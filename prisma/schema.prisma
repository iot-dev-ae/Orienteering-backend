generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Runner {
  id              Int         @id @default(autoincrement())
  password        String
  login           String      @unique @db.VarChar(256)
  fistname        String      @db.VarChar(256)
  lastname        String      @db.VarChar(256)
  birthdate       DateTime
  races           RunnerToRace[]

  @@map("runners")
}

model Race {
  id              Int         @id @default(autoincrement())
  name            String
  DateTime        DateTime
  start           DateTime
  end             DateTime
  beacons         Beacon[] 
  participants    RunnerToRace[]

  @@map("races")
}

model RunnerToRace{
  runnerId        Int
  raceId          Int
  bibNumber       Int
  totalTime       Float?
  runner          Runner @relation(fields: [runnerId], references: [id])
  Race            Race  @relation(fields: [raceId], references: [id])

  @@id([runnerId, raceId])
  @@map("runner_race")
}

model Beacon {
  id              Int         @id @default(autoincrement())
  id_race         Int         
  race            Race        @relation(fields: [id_race], references: [id], onDelete: Cascade)
  pos_GPS         Float[]

  @@map("beacons")
}

model Log {
  id              Int         @id @default(autoincrement())
  datetime        DateTime
  type            String     @db.VarChar(256)
  module          String     @db.VarChar(256)
  message         String     @db.VarChar(256)

  @@map("logs")
}